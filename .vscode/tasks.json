{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2b",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\cpp\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}